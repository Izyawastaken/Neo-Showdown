{
  "manifest_version": 3,
  "name": "NeoShowdown",
  "version": "3.2",
  "description": "Add NeoPaste and PokeShare features to Pokémon Showdown and the Pokémon Showdown Calculator.",
  "permissions": [
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "neoshowdown@izyawastaken.github.io",
      "strict_min_version": "109.0"
    }
  },
  "host_permissions": [
    "https://play.pokemonshowdown.com/*",
    "https://izyawastaken.github.io/NeoPaste/*",
    "https://izyawastaken.github.io/PokeShare/*",
    "https://*.vercel.app/*",
    "https://calc.pokemonshowdown.com/*",
    "https://psext.agastyawastaken.workers.dev/*",
    "https://neocalc.agastyawastaken.workers.dev/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://play.pokemonshowdown.com/*",
        "https://izyawastaken.github.io/NeoPaste/*",
        "https://izyawastaken.github.io/PokeShare/*",
        "https://*.vercel.app/*",
        "https://calc.pokemonshowdown.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "https://play.pokemonshowdown.com/*",
        "https://izyawastaken.github.io/*",
        "https://*.vercel.app/*",
        "https://calc.pokemonshowdown.com/*"
      ]
    }
  ]
}
